<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.achievements.AchievementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/trens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тренировки" />

        <ProgressBar
            android:id="@+id/pb_train"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />

        <TextView
            android:id="@+id/panna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Панна 1 на 1" />

        <ProgressBar
            android:id="@+id/pb_panna"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Турнир 3 на 3" />

        <ProgressBar
            android:id="@+id/pb_turn"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />

        <TextView
            android:id="@+id/lager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лагерь" />

        <ProgressBar
            android:id="@+id/pb_lager"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тестирование" />

        <ProgressBar
            android:id="@+id/pb_test"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />

        <TextView
            android:id="@+id/p_earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ВСЕГО ЗАРАБОТАНО БАЛЛОВ" />

        <ProgressBar
            android:id="@+id/pb_earned"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />

        <TextView
            android:id="@+id/p_avaliable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ДОСТУПНО БАЛЛОВ" />

        <ProgressBar
            android:id="@+id/pb_avaliable"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:progressTint="@color/light_green"
            android:scaleY="3" />
    </LinearLayout>

</FrameLayout>